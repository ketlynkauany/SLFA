<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Novo Filme</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded shadow-md w-96">
    <h1 class="text-xl font-bold mb-4 text-center">Novo Filme</h1>

    <form action="/filmes/novo" method="post" class="space-y-4">

      <input type="text" name="titulo" placeholder="Título"
        class="w-full border p-2 rounded" required>

      <input type="number" name="ano" placeholder="Ano"
        class="w-full border p-2 rounded" required>

      <select name="id_categoria" class="w-full border p-2 rounded">
        <% categorias.forEach(c => { %>
          <option value="<%= c.id_categoria %>">
            <%= c.nome_categoria %>
          </option>
        <% }) %>
      </select>

      <div>
        <p class="mb-1">Estrelas:</p>
        <% for(let i=1; i<=5; i++) { %>
          <label class="mr-2">
            <input type="radio" name="estrelas" value="<%= i %>" required>
            <%= i %>
          </label>
        <% } %>
      </div>

      <textarea name="comentario"
        class="w-full border p-2 rounded"
        placeholder="Comentário"></textarea>

      <button class="w-full bg-blue-600 text-white p-2 rounded">
        Salvar
      </button>

    </form>
  </div>

</body>
</html>
