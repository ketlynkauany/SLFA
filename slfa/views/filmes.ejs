<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Filmes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <div class="max-w-5xl mx-auto bg-white p-6 rounded shadow">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-xl font-bold">Olá, <%= usuario.nome %></h1>
      <a href="/logout" class="text-red-600">Sair</a>
    </div>

    <a href="/filmes/novo"
       class="inline-block mb-4 bg-blue-600 text-white px-4 py-2 rounded">
       Novo Filme
    </a>

    <table class="w-full border">
      <thead class="bg-gray-200">
        <tr>
          <th class="p-2">Título</th>
          <th class="p-2">Ano</th>
          <th class="p-2">Categoria</th>
          <th class="p-2">Estrelas</th>
          <th class="p-2">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% filmes.forEach(f => { %>
          <tr class="border-t text-center">
            <td class="p-2"><%= f.titulo %></td>
            <td class="p-2"><%= f.ano %></td>
            <td class="p-2"><%= f.nome_categoria %></td>
            <td class="p-2"><%= f.estrelas %></td>
            <td class="p-2">
              <a href="/filmes/delete/<%= f.id_filme %>"
                 class="text-red-600">Excluir</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
